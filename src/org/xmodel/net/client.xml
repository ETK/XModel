<script>
  <create var="m">
    <forest>
      <extern:cache class="org.xmodel.net.NetworkCachingPolicy">
        <host>localhost</host>
        <port>12121</port>
        <timeout>5000</timeout>
        <query>.</query>
        
        <onError>
          <print>$error</print>
          <sleep>3000</sleep>
          <markDirty>.</markDirty>
        </onError>
      </extern:cache>
    </forest>
  </create>
  
  <createTrigger var="trigger" source="$m/*" initialize="true">
    <logi>format( 'REMOVED:\n%s', $removed/@id)</logi>
    <logi>format( 'ADDED:\n%s', $added/@id)</logi>
    <print>$added</print>
  </createTrigger>
  
  <eventLoop/>
</script>